
# 502 temporaly error
原因１：EC2が立ち上がっていない
原因２：ALBにアクセスが大量に当たっている

# nginxの設定が立っていない時
server {
    listen       80;
    server_name  application;
    
    location / {
        proxy_pass http://client:8090;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
